<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <title>URL Shortener</title>
</head>


<body>

  <div class="container">
    <form action="/short-url" method="POST" class="my-4 form-inline input-group mb-3">
      <input type="text" class="form-control" placeholder="Original URL" name="fullUrl" aria-describedby="button-addon2">
      <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Shorten</button>
    </form>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col" id="originalUrl">Original URL</th>
            <th scope="col">Copy URL</th>
            <th scope="col">Go to site</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% shorUrls.forEach(shortUrl => { %>
            <tr>
              <td id="originalUrl"><a href="<%= shortUrl.orginal_url %>"><%= shortUrl.orginal_url %></a></td>
              <td id="copy-td">
                <button onclick="copyFunc('<%= shortUrl.shorter_url %>', this)" class="btn btn-info">
                  <i class="bi bi-copy"></i>
                </button>
              </td>
              <td><a href="/<%= shortUrl.shorter_url %>"><button class="btn btn-success " data-toggle="modal" data-target="#exampleModal"><i class="bi bi-box-arrow-in-right"></i></button></a></td>
              <td><button class="btn btn-danger" onclick="deleteUrl('<%= shortUrl._id %>', this)"><i class="bi bi-trash3"></i></button></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= pageCount; i++) { %>
            <li class="page-item"><a class="page-link" href="?limit=10&page=<%= i %>"><%= i %></a></li>
          <% } %>
        </ul>
      </nav>
  </div>

  <script src="../public/js/index.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
